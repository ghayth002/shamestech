{% extends 'base.html.twig' %}

{% block title %}Voir la réponse{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Détails de la réponse</h1>

        <div class="card p-3">
            <p><strong>Contenu :</strong></p>
            <p>{{ reponse.content }}</p>

            <p><strong>Créée le :</strong> {{ reponse.createdAt ? reponse.createdAt|date('d/m/Y H:i') : 'N/A' }}</p>

            <p><strong>Lu :</strong> {{ reponse.isRead ? 'Oui' : 'Non' }}</p>
        </div>

        <a href="{{ path('reponse_messages') }}" class="btn btn-secondary mt-3">⬅ Retour</a>
    </div>
{% endblock %}
