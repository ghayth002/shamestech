{% extends 'front/layout.html.twig' %}

{% block title %}{{ page_title }}{% endblock %}

{% block content %}
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('front_event_list') }}" class="text-decoration-none">Events</a></li>
        <li class="breadcrumb-item active">Create New Event</li>
    </ol>
</nav>

<div class="row mb-5">
    <div class="col">
        <h2 class="fw-bold text-primary"><i class="fas fa-plus-circle me-2"></i> Create New Event</h2>
        <p class="text-muted">Fill out the form below to create a new event that you can manage and track.</p>
    </div>
</div>

<div class="row">
    <div class="col-md-8 mx-auto">
        <div class="card front-card">
            <div class="card-body p-lg-5">
                <form method="post" action="{{ path('front_event_new') }}">
                    <div class="mb-4">
                        <label for="name" class="form-label fw-medium">Event Name</label>
                        <div class="input-group">
                            <span class="input-group-text bg-primary text-white">
                                <i class="fas fa-calendar-alt"></i>
                            </span>
                            <input type="text" class="form-control" id="name" name="name" required 
                                   placeholder="Enter a descriptive name for your event">
                        </div>
                        <div class="form-text">Choose a clear and descriptive name for your event.</div>
                    </div>
                    
                    <div class="mb-4">
                        <label for="startDate" class="form-label fw-medium">Start Date</label>
                        <div class="input-group">
                            <span class="input-group-text bg-primary text-white">
                                <i class="fas fa-calendar"></i>
                            </span>
                            <input type="date" class="form-control" id="startDate" name="startDate" required>
                        </div>
                        <div class="form-text">When will your event start?</div>
                    </div>
                    
                    <div class="mb-4">
                        <label for="category" class="form-label fw-medium">Category (Optional)</label>
                        <div class="input-group">
                            <span class="input-group-text bg-primary text-white">
                                <i class="fas fa-tag"></i>
                            </span>
                            <input type="text" class="form-control" id="category" name="category" 
                                   placeholder="e.g., Conference, Workshop, Meeting">
                        </div>
                        <div class="form-text">Categorize your event to help with organization.</div>
                    </div>
                    
                    <hr class="my-4">
                    
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a href="{{ path('front_event_list') }}" class="btn btn-outline-secondary">
                            <i class="fas fa-times me-2"></i> Cancel
                        </a>
                        <button type="submit" class="btn btn-primary px-4">
                            <i class="fas fa-save me-2"></i> Create Event
                        </button>
                    </div>
                </form>
            </div>
        </div>
        
        <div class="card mt-4 front-card border-0 bg-primary bg-opacity-10">
            <div class="card-body p-4">
                <div class="d-flex">
                    <div class="me-3">
                        <i class="fas fa-lightbulb text-primary fs-4"></i>
                    </div>
                    <div>
                        <h5 class="text-primary mb-2">Tips for creating a successful event</h5>
                        <ul class="mb-0">
                            <li>Use a clear, descriptive name that conveys the purpose of your event</li>
                            <li>Set realistic start dates to ensure proper planning</li>
                            <li>Categorize your events for better organization</li>
                            <li>After creating your event, you can add milestones through the admin interface</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %} 