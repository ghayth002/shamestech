{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .front-header {
            background-color: var(--primary-light);
            padding: 3rem 0;
            margin-bottom: 3rem;
            position: relative;
            overflow: hidden;
        }
        
        .front-header::before {
            content: '';
            position: absolute;
            top: 0;
            right: 0;
            width: 300px;
            height: 300px;
            background: var(--primary-color);
            opacity: 0.1;
            border-radius: 50%;
            transform: translate(50%, -50%);
        }
        
        .front-header::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            width: 200px;
            height: 200px;
            background: var(--secondary-color);
            opacity: 0.1;
            border-radius: 50%;
            transform: translate(-30%, 30%);
        }
        
        .front-header h1 {
            font-weight: 700;
            color: var(--primary-color);
            font-size: 2.5rem;
            margin-bottom: 0.5rem;
        }
        
        .front-header .lead {
            color: var(--text-light);
            font-size: 1.25rem;
            font-weight: 300;
        }
        
        .front-features {
            display: flex;
            margin-top: 2rem;
            gap: 1.5rem;
        }
        
        .feature-item {
            display: flex;
            align-items: center;
            font-size: 0.9rem;
            color: var(--text-dark);
        }
        
        .feature-item i {
            background-color: var(--primary-light);
            color: var(--primary-color);
            padding: 0.5rem;
            border-radius: 50%;
            margin-right: 0.5rem;
            font-size: 0.8rem;
        }
        
        .front-actions {
            display: flex;
            gap: 1rem;
        }
        
        .front-actions .btn {
            padding: 0.75rem 1.5rem;
            font-weight: 500;
        }
        
        .front-actions .btn-primary {
            box-shadow: 0 4px 12px rgba(67, 97, 238, 0.2);
        }
        
        .front-actions .btn-outline-primary {
            border-color: var(--primary-color);
            color: var(--primary-color);
        }
        
        .front-actions .btn-outline-primary:hover {
            background-color: var(--primary-color);
            color: white;
        }
        
        .front-card {
            border-radius: 1.5rem;
            transition: all 0.3s ease;
            border: none;
            overflow: hidden;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
        }
        
        .front-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
        }
        
        .front-card .card-header {
            border-radius: 0;
            font-weight: 600;
            font-size: 1.2rem;
            padding: 1.5rem;
        }
        
        .front-card .card-footer {
            background-color: transparent;
            border-top: 1px solid rgba(0,0,0,0.05);
            padding: 1rem 1.5rem;
        }
        
        .front-footer {
            margin-top: 5rem;
            padding: 3rem 0;
            background-color: var(--light-gray);
            text-align: center;
        }
        
        .front-footer .social-links {
            display: flex;
            justify-content: center;
            gap: 1rem;
            margin-bottom: 1.5rem;
        }
        
        .front-footer .social-links a {
            width: 40px;
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: var(--white);
            color: var(--primary-color);
            border-radius: 50%;
            transition: all 0.3s ease;
        }
        
        .front-footer .social-links a:hover {
            background-color: var(--primary-color);
            color: var(--white);
            transform: translateY(-3px);
        }
        
        @media (max-width: 768px) {
            .front-header {
                padding: 2rem 0;
            }
            
            .front-features {
                flex-direction: column;
                gap: 0.75rem;
            }
            
            .front-actions {
                flex-direction: column;
            }
        }
    </style>
{% endblock %}

{% block body %}
    <header class="front-header">
        <div class="container position-relative" style="z-index: 1;">
            <div class="row align-items-center">
                <div class="col-lg-7">
                    <h1>Event Manager</h1>
                    <p class="lead">Seamlessly plan, organize, and track your events</p>
                    
                    <div class="front-features">
                        <div class="feature-item">
                            <i class="fas fa-check"></i>
                            <span>Easy to organize</span>
                        </div>
                        <div class="feature-item">
                            <i class="fas fa-check"></i>
                            <span>Track progress</span>
                        </div>
                        <div class="feature-item">
                            <i class="fas fa-check"></i>
                            <span>Manage milestones</span>
                        </div>
                    </div>
                </div>
                <div class="col-lg-5 mt-4 mt-lg-0 text-center text-lg-end">
                    <div class="front-actions">
                        <a href="{{ path('front_event_list') }}" class="btn btn-outline-primary">
                            <i class="fas fa-list me-2"></i> Browse Events
                        </a>
                        <a href="{{ path('front_event_new') }}" class="btn btn-primary">
                            <i class="fas fa-plus me-2"></i> Create Event
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <main class="container">
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }} alert-dismissible fade show">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            {% endfor %}
        {% endfor %}

        {% block content %}{% endblock %}
    </main>

    <footer class="front-footer">
        <div class="container">
            <div class="social-links">
                <a href="#"><i class="fab fa-facebook-f"></i></a>
                <a href="#"><i class="fab fa-twitter"></i></a>
                <a href="#"><i class="fab fa-instagram"></i></a>
                <a href="#"><i class="fab fa-linkedin-in"></i></a>
            </div>
            <p class="text-muted mb-1">&copy; {{ "now"|date("Y") }} Event Manager. All rights reserved.</p>
            <p class="text-muted small">Built with <i class="fas fa-heart text-danger"></i> and Symfony</p>
        </div>
    </footer>
{% endblock %} 