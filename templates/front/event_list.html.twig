{% extends 'front/layout.html.twig' %}

{% block title %}{{ page_title }}{% endblock %}

{% block content %}
<div class="row mb-5">
    <div class="col-lg-12">
        <h2 class="fw-bold">
            <i class="fas fa-calendar-alt me-2 text-primary"></i> Upcoming Events
        </h2>
        <p class="text-muted">Discover exciting events and view their details.</p>
    </div>
</div>

{% if events is empty %}
    <div class="row">
        <div class="col-md-8 mx-auto text-center py-5">
            <div class="mb-4">
                <i class="fas fa-calendar-alt text-muted" style="font-size: 5rem; opacity: 0.3;"></i>
            </div>
            <h3 class="fw-bold">No events found</h3>
            <p class="text-muted mb-4">There are currently no events to display.</p>
        </div>
    </div>
{% else %}
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        {% for event in events %}
            <div class="col">
                <div class="card front-card h-100">
                    <div class="card-header bg-white">
                        <h5 class="mb-0 text-primary">{{ event.name }}</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-flex align-items-center mb-3">
                            <div class="icon-wrapper me-3 rounded-circle bg-primary bg-opacity-10 p-3">
                                <i class="fas fa-calendar text-primary"></i>
                            </div>
                            <div>
                                <small class="text-muted d-block">Start Date</small>
                                <strong>{{ event.startDate|date('F d, Y') }}</strong>
                            </div>
                        </div>
                        
                        <div class="d-flex align-items-center">
                            <div class="icon-wrapper me-3 rounded-circle bg-info bg-opacity-10 p-3">
                                <i class="fas fa-tag text-info"></i>
                            </div>
                            <div>
                                <small class="text-muted d-block">Category</small>
                                {% if event.category %}
                                    <span class="badge bg-info">{{ event.category }}</span>
                                {% else %}
                                    <span class="text-muted">None</span>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                    <div class="card-footer bg-white">
                        <a href="{{ path('app_front_event', {id: event.id}) }}" class="btn btn-outline-primary w-100">
                            <i class="fas fa-eye me-2"></i> View Details
                        </a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endif %}
{% endblock %} 