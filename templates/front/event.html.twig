{% extends 'front/layout.html.twig' %}

{% block title %}{{ page_title }}{% endblock %}

{% block content %}
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('app_front_events_list') }}" class="text-decoration-none">Events</a></li>
        <li class="breadcrumb-item active">{{ event.name }}</li>
    </ol>
</nav>

<div class="row mb-5">
    <div class="col-lg-8">
        <h2 class="fw-bold text-primary mb-3">{{ event.name }}</h2>
    </div>
    <div class="col-lg-4 text-lg-end d-flex align-items-center justify-content-lg-end mt-3 mt-lg-0">
        <a href="{{ path('app_front_events_list') }}" class="btn btn-outline-primary me-2">
            <i class="fas fa-arrow-left me-2"></i> Back to Events
        </a>
        <a href="{{ path('app_event_qr_code', {id: event.id}) }}" class="btn btn-primary">
            <i class="fas fa-qrcode me-2"></i> QR Code
        </a>
    </div>
</div>

<div class="row">
    <div class="col-lg-8 mx-auto">
        <div class="card front-card mb-5">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0"><i class="fas fa-info-circle me-2"></i> Event Details</h5>
            </div>
            <div class="card-body p-0">
                <div class="p-4 bg-primary bg-opacity-10 text-center">
                    <div class="display-4 text-primary mb-2">{{ event.startDate|date('d') }}</div>
                    <div class="h5 text-primary">{{ event.startDate|date('F Y') }}</div>
                    {% if event.category %}
                        <span class="badge bg-info mt-2 px-3 py-2">{{ event.category }}</span>
                    {% endif %}
                </div>
                
                <div class="p-4">
                    <div class="row align-items-center mb-4">
                        <div class="col-auto">
                            <div class="icon-wrapper rounded-circle bg-primary bg-opacity-10 p-3">
                                <i class="fas fa-calendar text-primary"></i>
                            </div>
                        </div>
                        <div class="col">
                            <h6 class="mb-1">Start Date</h6>
                            <p class="mb-0">{{ event.startDate|date('F d, Y') }}</p>
                        </div>
                    </div>
                    
                    <div class="row align-items-center mb-4">
                        <div class="col-auto">
                            <div class="icon-wrapper rounded-circle bg-info bg-opacity-10 p-3">
                                <i class="fas fa-tag text-info"></i>
                            </div>
                        </div>
                        <div class="col">
                            <h6 class="mb-1">Category</h6>
                            <p class="mb-0">
                                {% if event.category %}
                                    <span class="badge bg-info">{{ event.category }}</span>
                                {% else %}
                                    <span class="text-muted">None</span>
                                {% endif %}
                            </p>
                        </div>
                    </div>
                    
                    <div class="row align-items-center">
                        <div class="col-auto">
                            <div class="icon-wrapper rounded-circle bg-warning bg-opacity-10 p-3">
                                <i class="fas fa-qrcode text-warning"></i>
                            </div>
                        </div>
                        <div class="col">
                            <h6 class="mb-1">QR Code</h6>
                            <p class="mb-0">
                                <a href="{{ path('app_event_qr_code', {id: event.id}) }}" class="btn btn-sm btn-warning">
                                    <i class="fas fa-qrcode me-2"></i> View QR Code
                                </a>
                                <span class="text-muted ms-2 small">Scan to access event details</span>
                            </p>
                        </div>
                    </div>
                </div>
                
                <div class="card-footer bg-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <span class="text-muted small">Event ID: {{ event.id }}</span>
                        <a href="{{ path('app_front_events_list') }}" class="btn btn-sm btn-outline-primary">
                            <i class="fas fa-arrow-left me-2"></i> Back to Events
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.icon-wrapper {
    width: 48px;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
}
</style>
{% endblock %} 